<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="mainWindow.MainController">
    <children>
        <AnchorPane prefHeight="365.0" prefWidth="640.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <TextField fx:id="txtFirstName" layoutX="200.0" layoutY="137.0" prefHeight="26.0" prefWidth="194.0"/>
                <TextField fx:id="txtLastName" layoutX="415.0" layoutY="137.0" prefHeight="26.0" prefWidth="194.0"/>
                <Text layoutX="43.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="My Really Cool Contact Management System" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Text>
                <Text styleClass="input-label" layoutX="200.0" layoutY="134.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="First Name"/>
                <Text layoutX="415.0" layoutY="134.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name"/>
                <Text layoutX="415.0" layoutY="209.0" strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail"/>
                <Text layoutX="200.0" layoutY="210.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Phone"/>
                <TextField fx:id="txtPhone" layoutX="200.0" layoutY="214.0" prefHeight="26.0" prefWidth="194.0"/>
                <TextField fx:id="txtEmail" layoutX="415.0" layoutY="214.0" prefHeight="26.0" prefWidth="194.0"/>
                <ImageView fitHeight="192.0" fitWidth="148.0" layoutX="30.0" layoutY="155.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../phonebook.jpg"/>
                    </image>
                </ImageView>
                <Button fx:id="btnSave" styleClass="save-button" layoutX="201.0" layoutY="274.0" mnemonicParsing="false"
                        prefHeight="36.0" prefWidth="125.0" text="Save" textFill="WHITE"/>
                <Button fx:id="btnClear" styleClass="cancel-button" layoutX="342.0" layoutY="274.0"
                        mnemonicParsing="false" prefHeight="36.0" prefWidth="125.0" text="Clear" textFill="WHITE"/>
                <Button fx:id="btnShowData" styleClass="show-button" layoutX="478.0" layoutY="274.0"
                        mnemonicParsing="false" prefHeight="36.0" prefWidth="125.0" text="Show Data" textFill="WHITE"/>
            </children>
        </AnchorPane>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
